rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Each user has a document under /users/{uid}
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // User journey data
    match /journeys/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Routines planned for the user
    match /routines/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Leaderboard - readable by all but writable only by a logged-in user for themself
    match /leaderboard/{uid} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // For any other collection, block by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
